{
  "name": "@subrite/next-auth-provider",
  "version": "0.0.2",
  "description": "NextAuth provider for Subrite",
  "author": {
    "name": "Subrite",
    "email": "post@subrite.no",
    "url": "https://www.subrite.no"
  },
  "files": [
    "./dist"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "keywords": [
    "next-auth",
    "subrite",
    "nextjs"
  ],
  "scripts": {
    "compile": "tsup --external next-auth --dts --format cjs,esm --clean src/index.ts",
    "lint": "eslint {src,example}/**/*.ts --fix",
    "upgrade": "npm-check-updates --upgrade",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "format": "prettier '{src,example}/**/*.ts' --write"
  },
  "repository": "skavl-media/subrite-auth",
  "license": "MIT",
  "peerDependencies": {
    "next-auth": "^4.23.x"
  },
  "devDependencies": {
    "@types/node": "20.8.7",
    "@typescript-eslint/eslint-plugin": "6.8.0",
    "@typescript-eslint/parser": "6.8.0",
    "eslint": "8.51.0",
    "eslint-config-prettier": "9.0.0",
    "husky": "8.0.3",
    "lint-staged": "15.0.1",
    "npm-check-updates": "16.14.6",
    "prettier": "3.0.3",
    "tsup": "7.2.0",
    "typescript": "5.2.2"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --quiet --fix"
    ],
    "*.{json,ts}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "env": {
      "node": true
    }
  }
}
