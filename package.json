{
  "name": "@subrite/subrite-auth",
  "version": "0.0.1",
  "description": "NextAuth provider for Subrite",
  "author": {
    "name": "Skavl Media",
    "email": "hi@skavl.no",
    "url": "https://www.skavlmedia.no/"
  },
  "files": [
    "./dist"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "keywords": [
    "nextauth",
    "subrite",
    "nextjs"
  ],
  "scripts": {
    "compile": "tsup --external next-auth --dts --format cjs,esm --clean src/index.ts",
    "lint": "eslint {src,test}/**/*.ts --fix",
    "upgrade": "npm-check-updates --upgrade",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "format": "prettier-eslint '{src,test}/**/*.ts' --write"
  },
  "repository": "openartmarket/supabase-live-table",
  "license": "MIT",
  "peerDependencies": {
    "next-auth": "^4.23.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "6.8.0",
    "@typescript-eslint/parser": "6.8.0",
    "eslint": "8.51.0",
    "eslint-config-prettier": "9.0.0",
    "husky": "8.0.3",
    "lint-staged": "15.0.1",
    "npm-check-updates": "16.14.6",
    "prettier": "3.0.3",
    "prettier-eslint-cli": "8.0.1",
    "supabase": "1.106.1",
    "tsup": "7.2.0",
    "typescript": "5.2.2"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --quiet --fix"
    ],
    "*.{json,ts}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "env": {
      "node": true
    }
  }
}
